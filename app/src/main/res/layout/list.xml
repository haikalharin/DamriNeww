<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gambar"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitCenter" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_asal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asal"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#2d2d2d"
                    android:layout_toRightOf="@id/gambar"/>

                <TextView
                    android:id="@+id/tv_nm_asal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nama asal"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/gambar" />

                <TextView
                    android:id="@+id/tv_nm_kota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nama kota"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/gambar" />

                <TextView
                    android:id="@+id/tv_latloc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="latloc"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/gambar"
                    android:layout_below="@+id/judul"/>

                <TextView
                    android:id="@+id/tv_longloc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="longloc"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/gambar"
                    android:layout_below="@+id/tv_asal"/>
                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="alamat"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/gambar"
                    android:layout_below="@+id/tv_asal"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>